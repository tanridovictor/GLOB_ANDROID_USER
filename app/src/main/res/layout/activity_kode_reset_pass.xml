<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".Activity.KodeResetPassActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="3dp"
        android:background="@color/bg"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:elevation="@dimen/cardview_default_elevation">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBack"
            android:layout_marginEnd="15dp"
            android:tint="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_gravity="left"
            android:background="@color/bg"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            tools:srcCompat="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:fontFamily="@font/karla"
            android:textSize="20sp"/>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="Masukan Kode Verifikasi"
        android:fontFamily="@font/karla"
        android:gravity="center"
        android:textSize="14dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/descEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="Masukkan kode verifikasi yang dikirimkan ke email : tanridov@gmail.com"
        android:fontFamily="@font/karla"
        android:gravity="center"
        android:textSize="12dp"
        android:textColor="@color/DarkGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">
        <EditText
            android:id="@+id/code1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="textCapCharacters"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="textCapCharacters"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="textCapCharacters"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="textCapCharacters"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="textCapCharacters"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textError"
        android:text="Kode verifikasi salah"
        android:visibility="gone"
        android:textColor="@color/color_warning"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnVerif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        style="@style/btn_style"
        android:text="Verifikasi"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/kirimulang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="Mohon tunggu dalam 30 detik\n untuk kirim ulang"
        android:gravity="center"
        android:fontFamily="@font/karla"/>

</LinearLayout>