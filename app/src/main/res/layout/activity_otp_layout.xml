<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="Masukan Kode Verifikasi"
        android:fontFamily="@font/karla"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/descOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="Masukkan kode verifikasi yang dikirimkan ke email : tanridov@gmail.com"
        android:fontFamily="@font/karla"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/DarkGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">
        <EditText
            android:id="@+id/code1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:focusedByDefault="true"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"/>
        <EditText
            android:id="@+id/code6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="16dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textError"
        android:text="Kode verifikasi salah"
        android:visibility="gone"
        android:textColor="@color/color_warning"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnVerif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        style="@style/btn_style"
        android:text="Verifikasi"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/kirimulang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="Mohon tunggu dalam 30 detik\n untuk kirim ulang"
        android:gravity="center"
        android:fontFamily="@font/karla"/>

</LinearLayout>