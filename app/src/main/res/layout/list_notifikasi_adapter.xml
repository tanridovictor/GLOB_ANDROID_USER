<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvnotif"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/judulNotifikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Balasan Negosiasi"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/namaSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"
                android:text="PT Global Chemindo Megatrading"
                android:textColor="@color/grey"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/namaBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="12sp"
                android:text="Dairy Boost Cream Flavor XF1591 967023 ex. Sensient Techmologies/Indonesia @ 10kg"
                android:textColor="@color/DarkGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_access_time_black_24dp"/>
                <TextView
                    android:id="@+id/tanggalNotif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textSize="10sp"
                    android:textColor="@color/DarkGray"
                    android:text="01-10-2020 15:01"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="@color/divider"/>-->

</LinearLayout>