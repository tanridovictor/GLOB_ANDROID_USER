<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:background="@color/bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Detail Transaksi"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:text="ID Transaksi"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idTransaksi"
                android:text="INV/M/00075/..."
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:text="Status"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:text="Menunggu"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/ketDibatalkan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan : Stok kososng"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:text="Penjual"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/penjual"
                android:text="Global Chemindo Megatrading"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:background="@color/divider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:text="Metode Pembayaran"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Term of Payment"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:text="Permintaan Kirm"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/permintaanKirim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12/01/20"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:text="Alamat Pengiriman"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/shipTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:text="Alamat Penagihan"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/billTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:background="@color/divider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:text="Daftar Pesanan"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fitsSystemWindows="true"
                android:paddingBottom="10dp">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:text="Total Harga"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalHarga"
                android:text="Rp 1.000.000"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvPpntotalHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkGray"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ppntotalHarga"
                    android:text=""
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkGray"
                    android:text="Ongkos Kirim"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ongkosKirim"
                    android:text="Rp 1.000.000"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:background="@color/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkGray"
                    android:text="Total"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total"
                    android:text="Rp 1.000.000"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>