<resources>

    <!-- Base application theme. -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
<!--        <item name="android:windowBackground">@drawable/splash_bg</item>-->
    </style>

    <style name="btn_style" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/lightBg</item>
        <item name="android:background">@drawable/button_main</item>
    </style>

    <style name="btn_style_logout" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_main</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/lightBg</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/brandon_grotesque_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabWidget" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/brandon_bold</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
